@using OrdersDb.Resources
<div data-bind="visible: visible">
    <div class="search-area col-md-2 title-fix">
        @Html.Partial("Controls/EditActionsBlock")

        <h4><i class="fa fa-dropbox"></i>&nbsp;&nbsp; @EntitiesResources.OrderItems</h4>
        <br />
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <a data-bind="click: addNew" class="btn btn-success btn-xs" href="javascript:;"><i class="fa fa-plus-square"></i> @CommonResources.Add</a>
                    <div class="empty-space"></div>
                    <a data-bind="click: deleteSelected, css: { 'disabled' : !anyChecked() }" class="btn btn-danger btn-xs" href="javascript:;">
                        <i class="fa fa-remove"></i> @CommonResources.Delete_Selected
                    </a>
                    <div class="empty-space"></div>
                    <a data-bind="click: clearList, css: { 'disabled': isEmptyTable }" class="btn purple btn-xs" href="javascript:;"><i class="fa fa-trash"></i> @CommonResources.Clear_List</a>
                </div>
            </div>
        </div>

    </div>
    <div class="table-area col-md-10 title-fix form">
        <h3>
            <i class="fa fa-edit"></i>
            <span data-bind="text: title" class="title-span"></span>
        </h3>

        <br />
        <div class="scrolling-area">
            @Html.Partial("Controls/ValidationBlock")
            <div class="row">
                <div class="col-md-12 order-data">
                    <h4 class="form-section">@CommonResources.Order_Data</h4>
                </div>
            </div>

            <!-- ko with: fields -->
            <div class="row">
                <div class="col-md-12">
                    <!-- ko with: Code -->
                    @Html.Partial("Controls/Fields/EditTextField")
                    <!-- /ko -->
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <!-- ko with: Client -->
                    @Html.Partial("Controls/Fields/Dropdown")
                    <!-- /ko -->
                </div>
            </div>
            <!-- /ko -->

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <div class="col-md-12">
                            <p class="form-control-static">
                                <strong>@CommonResources.OrderItems_Total:</strong>&nbsp;&nbsp;
                                <span data-bind="text: displayed" class="badge bg-red"></span>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <div class="col-md-12">
                            <p class="form-control-static">
                                <strong>@CommonResources.Total_Buy_Price:</strong>&nbsp;&nbsp;
                                <span data-bind="text: totalBuyPrice" class="badge bg-yellow-crusta"></span>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <div class="col-md-12">
                            <p class="form-control-static">
                                <strong>@CommonResources.Total_Sell_Price:</strong>&nbsp;&nbsp;
                                <span data-bind="text: totalSellPrice" class="badge bg-green-jungle"></span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 order-data">
                    <h4 class="form-section">@EntitiesResources.OrderItems</h4>
                </div>
            </div>
            <!-- ko with: table -->
            <div class="row table-control-top-fix">
                @Html.Partial("Controls/Table/OrderItemsTable")
            </div>
            <!-- /ko -->
        </div>
    </div>

    <!-- ko with: orderItemModal -->
    @Html.Partial("Controls/OrderItemModal")
    <!-- /ko -->
</div>
