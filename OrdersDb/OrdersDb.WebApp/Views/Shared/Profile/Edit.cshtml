@using OrdersDb.Resources
<div data-bind="visible: visible">
    <div class="search-area col-md-2 title-fix">
        <h3><i class="fa fa-coffee"></i>&nbsp;&nbsp; @CommonResources.Actions</h3>
        <br />
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <a data-bind="click: save" class="btn btn-info" href="javascript:;"><i class="fa fa-save"></i> @CommonResources.Save</a>
                </div>
            </div>
        </div>
    </div>
    <div class="table-area col-md-10 title-fix">
        <h3>
            <i class="fa fa-edit"></i>
            <span class="title-span">@CommonResources.Edit_User_Profile</span>
        </h3>
        @Html.Partial("Controls/ValidationBlock")
        <br />
        <!-- ko with: fields -->
        <div class="row">
            <div class="col-md-12">
                <!-- ko with: Name -->
                <div data-bind="css: { 'has-error': hasErrors }" class="form-group">
                    <label data-bind="text: title" class="control-label"></label>
                    <input disabled="true" data-bind="value: value, valueUpdate: 'afterkeydown', attr: { placeholder: placeholder }, inputMask: mask, event : { keyup: change }" type="text" class="form-control">
                    <span data-bind="text: errorsText" class="help-block hidden-if-no-error">
                    </span>
                </div>
                <!-- /ko -->
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <!-- ko with: Email -->
                @Html.Partial("Controls/Fields/EditTextField")
                <!-- /ko -->
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <!-- ko with: Password -->
                <div data-bind="css: { 'has-error': hasErrors }" class="form-group">
                    <label data-bind="text: title" class="control-label"></label>
                    <input data-bind="value: value, valueUpdate: 'afterkeydown', attr: { placeholder: placeholder }, inputMask: mask, event : { keyup: change }"
                           type="password"
                           class="form-control">
                    <span data-bind="text: errorsText" class="help-block hidden-if-no-error">
                    </span>
                </div>
                <!-- /ko -->
            </div>
        </div>
        <!-- /ko -->

        <div class="row">
            <div class="col-md-12">
                <h4>@CommonResources.User_Image</h4>
                <img data-bind="attr: { src: userImage }" alt="" style="width: 100px; padding: 12px;" />
                <div style="position: relative;">
                    <input class="upload-flag-input flag-file-input" data-bind="event: { change: userImageSelected }" type="file" />
                    <a href="javascript:;" class="btn btn-success">
                        <i class="fa fa-upload"></i>
                        @CommonResources.Upload
                    </a>
                </div>
            </div>
        </div>

    </div>
</div>
